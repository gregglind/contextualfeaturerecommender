{
  "name": "featurerecommender",
  "title": "Contextual Feature Recommender",
  "id": "featurerecommender@insights.mozilla.com",
  "description": "This addon recommends Firefox interface features when they are needed. It is a temporary experimental feature installed through the Mozilla Test Pilot platform (https://testpilot.mozillalabs.com/). The goal of the study is to understand what the best way to present these recommendations is.",
  "author": "Kamyar Ardekani <kamyar@mozilla.com>",
  "contributors": [
    "Ilana Segall <isegall@mozilla.com>",
    "Gregg Lind <glind@mozilla.com"],
  "homepage": "https://github.com/raymak/contextualfeaturerecommender",
  "license": "MPL 2.0",
  "version": "2.1.1",
  "permissions": {
    "private-browsing": true
  },
  "icon": "./data/ui/icons/lightbulb_gr.png",
  "preferences": [
    {
      "name": "config.armnumber",
      "type": "menulist",
      "title": "switch arm",
      "value": 0,
      "options": [
          {
              "value": "0",
              "label": "active unexplained"
          },
          {
              "value": "1",
              "label": "passive unexplained"
          },
          {
              "value": "2",
              "label": "active explained"
          },
          {
              "value": "3",
              "label": "passive explained"
          },
          {
              "value": "4",
              "label": "control / no ui"
          }
      ],
      "description": ""
    },
    {
      "name": "action-resetaddon",
      "type": "control",
      "title": "Reset Pref Data",
      "value": "",
      "label": "reset addon",
      "description": ""
    },
    {
      "name": "action-showdata",
      "type": "control",
      "title": "Show Collected Data",
      "label": "show",
      "value": "",
      "description": ""
    },
    {
      "name": "lastRecommendation",
      "type": "string",
      "title": "lastRecommendation",
      "value": "",
      "description": ""
    }
  ]
}
